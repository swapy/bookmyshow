{
  "openapi": "3.0.1",
  "info": {
    "title": "Customer service API",
    "description": "Customer microserverice with fetch, create and update operations",
    "license": {
      "name": "Kotak MB 2.0",
      "url": "http://springdoc.org"
    },
    "version": "v0.0.1"
  },
  "servers": [
    {
      "url": "http://localhost:9091/dt-customers-service",
      "description": "Generated server url"
    }
  ],
  "paths": {
    "/v1/customer/senddetails": {
      "post": {
        "tags": [
          "customer client apis"
        ],
        "summary": "SendCustomerDetails",
        "operationId": "SendCustomerDetails",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SendCustomerDetailsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/SendCustomerDetailsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/v1/customer/fetchdetails": {
      "post": {
        "tags": [
          "customer client apis"
        ],
        "summary": "Fetch customer details from DB and bcif as required.",
        "operationId": "FetchCustomerDetails",
        "parameters": [
          {
            "name": "docIndicator",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": [
                "P",
                "T",
                "A"
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/CustomerFetchDetailsResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SendCustomerDetailsRequest": {
        "required": [
          "docIndicator",
          "docNumber",
          "email",
          "mobile"
        ],
        "type": "object",
        "properties": {
          "docIndicator": {
            "type": "string",
            "enum": [
              "P",
              "T",
              "A"
            ]
          },
          "docNumber": {
            "maxLength": 10,
            "minLength": 10,
            "pattern": "[A-Z]{5}\\d{4}[A-Z]",
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "mobile": {
            "maxLength": 10,
            "minLength": 10,
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "SendCustomerDetailsResponse": {
        "required": [
          "cif",
          "docNumber",
          "documentType",
          "email",
          "mobile"
        ],
        "type": "object",
        "properties": {
          "documentType": {
            "type": "string",
            "enum": [
              "PAN",
              "TAN"
            ]
          },
          "docNumber": {
            "maxLength": 10,
            "minLength": 10,
            "pattern": "[A-Z]{5}\\d{4}[A-Z]",
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "mobile": {
            "maxLength": 10,
            "minLength": 10,
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "cif": {
            "type": "string"
          }
        }
      },
      "CustomerDetails": {
        "required": [
          "docNumber",
          "documentType",
          "email",
          "mobile"
        ],
        "type": "object",
        "properties": {
          "documentType": {
            "type": "string",
            "enum": [
              "PAN",
              "TAN"
            ]
          },
          "docNumber": {
            "maxLength": 10,
            "minLength": 10,
            "pattern": "[A-Z]{5}\\d{4}[A-Z]",
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "mobile": {
            "maxLength": 10,
            "minLength": 10,
            "type": "string"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "CustomerFetchDetailsResponse": {
        "type": "object",
        "properties": {
          "cif": {
            "type": "string"
          },
          "documents": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CustomerDetails"
            }
          }
        }
      }
    }
  }
}